<Window x:Class="DotNetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language Detector"
        Height="350"
        Width="525">
    <Grid>
        <Label Content="Text to Translate"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"
               VerticalAlignment="Top"
               FontSize="16" />
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left"
                 Height="85"
                 Margin="10,46,0,0"
                 TextWrapping="Wrap"
                 Text="Enter text here..."
                 VerticalAlignment="Top"
                 Width="497" />
        <Label Content="Detected Language"
               HorizontalAlignment="Center"
               Margin="0,136,0,0"
               VerticalAlignment="Top"
               FontSize="16" />
        <Label x:Name="languageTextBox" HorizontalAlignment="Center"
               Margin="0,172,0,0"
               VerticalAlignment="Top"
               Width="Auto"
               Height="50"
               FontSize="28"
               Foreground="Blue"
               FontWeight="Bold" />
        <Button Content="Detect Language"
                Margin="200,227,200,0"
                VerticalAlignment="Top"
                Height="52"
                Click="Button_Click" />
    </Grid>
</Window>
